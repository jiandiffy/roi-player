{
  "manifest_version": 3,
  "name": "Page Region Magnifier (Enhanced)",
  "version": "1.2",
  "description": "Magnifies a selected region of the page to full screen. Improved precision and iframe support.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}